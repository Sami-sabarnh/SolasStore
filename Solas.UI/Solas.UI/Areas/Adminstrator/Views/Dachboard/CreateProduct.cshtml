@using Solas.BL.Models;
@model Solas.BL.Models.Product

@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct" asp-controller="Dachboard" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductCartDesc" class="control-label"></label>
                <input asp-for="ProductCartDesc" class="form-control" />
                <span asp-validation-for="ProductCartDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductShortDesc" class="control-label"></label>
                <input asp-for="ProductShortDesc" class="form-control" />
                <span asp-validation-for="ProductShortDesc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductLongDesc" class="control-label"></label>
                <input asp-for="ProductLongDesc" class="form-control" />
                <span asp-validation-for="ProductLongDesc" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountId" class="control-label"></label>
                <select asp-for="DiscountId" class="form-control">
                    @if (ViewBag.discounts != null && ViewBag.discounts is List<Discount>)
                    {
                        <option value="">Select an Discounts</option>

                        foreach (var item in ViewBag.discounts)
                        {

                            <option value="@item.DiscountId">@item.DiscountName : @item.DiscountPrecent</option>
                        }
                    }
                    else
                    {
                        <option value="">No discounts available</option>
                    }

                </select>
                <span asp-validation-for="DiscountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductInvintory.Quintity" class="control-label"></label>
                <input asp-for="ProductInvintory.Quintity" class="form-control" />
                <span asp-validation-for="ProductInvintory.Quintity" class="text-danger"></span>
                <div class="form-group">
                    <label for="images">Product Images:</label>
                    <input type="file" name="images" id="images" multiple />
                </div>
            </div>

            <div class="form-group">
                <label>Select Options:</label>
                @if (ViewBag.OptionGroups != null)
                {
                    foreach (var optionGroup in ViewBag.OptionGroups as List<OptionGroup>)
                    {
                        <div>
                            <strong>@optionGroup.OptionGroupName:</strong>
                            @foreach (var option in optionGroup.Options)
                            {
                                <div class="form-group">
                                    <input type="checkbox" name="selectedOptions" value="@option.OptionId" />
                                    <label>@option.OptionName</label>
                                </div>
                            }
                        </div>
                    }
                }
            </div>


            <div class="form-group">
                <label>Select categorys:</label>

                @if (ViewBag.categorys != null && ViewBag.categorys is List<Category>)
                {
                    foreach (var category in ViewBag.categorys)
                    {
                        <div class="form-group">
                            <input type="checkbox" name="categorys" value="@category.CategoryId" />
                            <label>@category.CategoryName</label>
                        </div>
                    }
                }
                else
                {
                    <div>No categories available</div>
                }
                <hr />
                <input type="checkbox" name="Ispublish" asp-for="IsPublish" />IsPublish?
                <hr />

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Back to List</a>

            </div>
        </form>
    </div>
</div>

<div>
</div>