@model Solas.BL.Models.Option

@{
    ViewData["Title"] = "CreateOption";
}

<h1>CreateOption</h1>

<h4>Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateOption">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="OptionName" class="control-label"></label>
                <input asp-for="OptionName" class="form-control" />
                <span asp-validation-for="OptionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="OptionGroupId" class="control-label">Option Group Name</label>
                <select asp-for="OptionGroupId" class="form-control" asp-items="@ViewBag.OptionGroup">
                    <option value="">Select an option group</option>
                </select>
                <span asp-validation-for="OptionGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

