@model IEnumerable<Solas.BL.Models.HomeSlider>

<!-- banner area start  -->
<div class="banner-area banner-area2 pos-rel">
    <div class="swiper-container slider__active">
      
            
        
        <div class="swiper-wrapper">
            @if (Model.Any())
            {
                
          
          @foreach (var item in Model)
                    {
            <div class="swiper-slide">
               
                <div class="single-banner single-banner-2 banner-800 d-flex align-items-center pos-rel">
                    
                        <div class="banner-bg banner-bg2 banner-bg2-1" data-background="ProductImages/@item.UrlImage">
                    </div>
                    <div class="container pos-rel">
                        <div class="row align-items-center">
                            <div class="col-lg-10 col-md-10">
                                <div class="banner-content banner-content2 banner-content2-1 pt-0">
                                    <div class="banner-meta-text" data-animation="fadeInUp" data-delay=".3s">
                                            @if (item.ShortTitle != null)
                                            {
                                                <span>@item.ShortTitle</span>

                                            }
                                    </div>
                                        @if (item.LongTitle != null)
                                        {
                                    <h1 class="banner-title" data-animation="fadeInUp" data-delay=".5s">
                                        @item.LongTitle
                                    </h1>
                                        }
                                    <div class="banner-btn" data-animation="fadeInUp" data-delay=".7s">
                                                <a asp-action="ALLProducts" asp-controller="Home" class="border-btn">Shop Now</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-2">
                            </div>
                        </div>
                    </div>
                   
                </div>
                
            </div>
                }

            }
            else
            {
                <div class="swiper-slide">

                    <div class="single-banner single-banner-2 banner-800 d-flex align-items-center pos-rel">

                        <div class="banner-bg banner-bg2 banner-bg2-1" data-background="assets/img/banner-1-3.jpg">
                        </div>
                        <div class="container pos-rel">
                            <div class="row align-items-center">
                                <div class="col-lg-10 col-md-10">
                                    <div class="banner-content banner-content2 banner-content2-1 pt-0">
                                        <div class="banner-meta-text" data-animation="fadeInUp" data-delay=".3s">
                                           
                                                <span>ShortTitle</span>

                                            
                                        </div>
                                       
                                            <h1 class="banner-title" data-animation="fadeInUp" data-delay=".5s">
                                                Title
                                            </h1>
                                        
                                        <div class="banner-btn" data-animation="fadeInUp" data-delay=".7s">
                                            <a asp-action="ALLProducts" asp-controller="Home" class="border-btn">Shop Now</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-2 col-md-2">
                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            }
        </div>
        
        <!-- If we need navigation buttons -->
      
    </div>
</div>
<!-- banner area end  -->