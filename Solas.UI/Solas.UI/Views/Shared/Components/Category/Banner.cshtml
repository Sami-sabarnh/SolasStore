@model IEnumerable<Solas.BL.Models.Category>


 <!-- category area start  -->
<section class="category-area pt-90 pb-120">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-8">
                <div class="section-title text-center">
                    <h2 class="section-main-title mb-50">Browse More</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="product-category-wrapper">
                    @foreach (var item in Model)
                    {
                        
                 
                    <div class="product-category-single pos-rel">
                        <div class="product-category-img">
                                <a asp-action="SearchByCategory" asp-controller="Home" asp-route-Id="@item.CategoryId">
                                    <img src="~/ProductImages/@item.ProductImageUrl"
                                     alt="product-img">
                            </a>
                        </div>
                        <div class="product-category-inner">
                            <div class="product-category-content">
                                    <a asp-action="SearchByCategory" asp-controller="Home" asp-route-Id="@item.CategoryId" class="product-category">@item.CategoryName</a>
                                <div class="product-meta-item">
                                        <div class="product-available">
                                            @if (@item.ProductCategories.Count > 0)
                                            {
                                                @item.ProductCategories.Count
                                            }
                                          
                                            
                                        </div>
                                    <div class="product-meta-type">products</div>
                                </div>
                            </div>
                        </div>
                    </div>


                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- category area end  -->
